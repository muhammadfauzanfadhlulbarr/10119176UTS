<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/Walktrought1"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/Background"
    android:backgroundTint="#00FFFFFF"
    android:gravity="center"
    tools:context=".Walktrought1">

    <LinearLayout
        android:id="@+id/daily_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/slide_images"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/daily_activity" />

        <TextView
            android:id="@+id/heading"
            style="@style/PoppinsSemiBold"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="Daily Activity"
            android:textAlignment="center"
            android:textColor="@color/PrimaryText"
            android:textSize="20dp" />

        <TextView
            android:id="@+id/heading_desc"
            style="@style/PoppinsRegular"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="These activities include eating, dressing, \ngetting into or out of a bed or chair, \ntaking a bath or shower, and using \nthe toilet."
            android:textAlignment="center"
            android:textColor="@color/SecondaryText"
            android:textSize="16dp" />

    </LinearLayout>


</RelativeLayout>